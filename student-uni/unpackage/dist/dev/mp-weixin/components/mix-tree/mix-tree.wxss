
.mix-tree-list {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	        flex-direction: column;
	padding-left: 30rpx;
}
.mix-tree-item {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	font-size: 30rpx;
	color: #333;
	height: 0;
	opacity: 0;
	-webkit-transition: 0.2s;
	transition: 0.2s;
	position: relative;
}
.mix-tree-item.border {
	border-bottom: 1px solid #eee;
}
.mix-tree-item.show {
	height: 80rpx;
	opacity: 1;
}
.mix-tree-icon {
	width: 26rpx;
	height: 26rpx;
	margin-right: 8rpx;
	opacity: 0.9;
}
.mix-tree-item.showchild:before {
	-webkit-transform: rotate(90deg);
	        transform: rotate(90deg);
}
.mix-tree-item.last:before {
	opacity: 0;
}

